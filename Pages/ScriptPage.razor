@page "/script/{Id:int}"
@inject ScriptApp.Services.ScriptService ScriptService
@using ScriptApp.Models

<h2 class="script-title">@Script?.Title</h2>

<div class="script-container">
    @if (Script != null)
    {
        @foreach (var block in Script.Blocks)
        {
            <div class="script-block" style="left:@px(block.X); top:@px(block.Y); width:@px(block.Width); height:@px(block.Height);">
                <pre>@block.Content</pre>
            </div>
        }
    }
</div>

<style>
    .script-title {
        text-align: center;
        font-size: 2rem;
        font-weight: 600;
        margin-bottom: 20px;
        color: #333;
    }

    .script-container {
        position: relative;
        width: 100%;
        min-height: 600px;
        border: 1px solid #ccc;
        border-radius: 10px;
        background: #fafafa;
        padding: 10px;
        overflow: auto;
    }

    .script-block {
        position: absolute;
        background: #fff;
        border: 1px solid #aaa;
        border-radius: 8px;
        padding: 8px 12px;
        box-shadow: 0 2px 6px rgba(0,0,0,0.15);
        font-family: Consolas, monospace;
        font-size: 0.95rem;
        line-height: 1.4;
        white-space: pre-wrap; /* перенос строк */
        overflow: hidden;
    }

    .script-block:hover {
        border-color: #4a90e2;
        box-shadow: 0 3px 10px rgba(0,0,0,0.2);
        cursor: grab;
    }

    pre {
        margin: 0;
        color: #222;
    }
</style>

@code {
    [Parameter] public int Id { get; set; }
    private Script? Script;

    protected override void OnInitialized()
    {
        Script = ScriptService.GetById(Id);
    }

    private string px(int value) => $"{value}px";
}
